<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/txt_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#5b5b72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mypage_layout1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/blue_background"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_mypage"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/mypage_img1"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_margin="20dp"
            android:background="@drawable/ic_mypage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txt_mypage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:text="회원님 안녕하세요!"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#5b5b72"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mypage_img1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.377" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘도 좋은 하루 보내세요 :)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mypage_img1"
            app:layout_constraintTop_toBottomOf="@+id/txt_mypage2"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_layout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="5dp"
            android:background="@drawable/line_sample"
            >
            <ImageView
                android:background="@drawable/ic_mypage2"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <android.widget.Button
                android:id="@+id/MypageMain_btn1"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:text="찜한 장소"
                android:textColor="#181D27"
                android:textStyle="bold"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:background="#00ff0000"/>

            <ImageView
                android:background="@drawable/ic_right"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </LinearLayout>
        //
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="5dp"
            android:background="@drawable/line_sample"
            >
            <ImageView
                android:background="@drawable/ic_mypage2"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <android.widget.Button
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:text="설정"
                android:id="@+id/MypageMain_btn2"
                android:textColor="#181D27"
                android:textStyle="bold"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:background="#00ff0000"/>

            <ImageView
                android:background="@drawable/ic_right"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </LinearLayout>
        //
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="5dp"
            android:background="@drawable/line_sample"
            >
            <ImageView
                android:background="@drawable/ic_mypage2"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <android.widget.Button
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:text="1:1 문의"
                android:id="@+id/MypageMain_btn3"
                android:textColor="#181D27"
                android:textStyle="bold"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:background="#00ff0000"/>

            <ImageView
                android:background="@drawable/ic_right"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </LinearLayout>
        //
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="5dp"
            android:background="@drawable/line_sample"
            >
            <ImageView
                android:background="@drawable/ic_mypage2"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <android.widget.Button
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:text="로그아웃"
                android:id="@+id/MypageMain_btn4"
                android:textColor="#181D27"
                android:textStyle="bold"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:background="#00ff0000"/>

            <ImageView
                android:background="@drawable/ic_right"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </LinearLayout>
        //


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
